<beans>
	<bean id="petA" class="org.springframework.tests.sample.beans.PetA">
		<constructor-arg ref="petB"/>
	</bean>

	<bean id="petB" class="org.springframework.tests.sample.beans.PetB">
		<constructor-arg ref="petC"/>
